<GameWindow>
    name : "game"
    atout_kv : atout
    im_atout_kv : "im_atout"
    card_vis : vision
    yourturn : "YourTurn"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "background.jpg"
        Rectangle:
            id: im_atout
            pos : 500,10
            size : 100,100
            source: str(root.im_atout_kv)
    canvas:
        Color:
            id : "R1"
            rgba : 0.,1.,0.,root.r1
        Rectangle:
            pos : 80,250
            size : 200,100
    canvas:
        Color:
            id :"R2"
            rgba : 0.,1.,0.,root.r2
        Rectangle:
            pos : 320,350
            size : 200,100
    canvas:
        Color:
            id :"R2"
            rgba : 0.,1.,0.,root.r3
        Rectangle:
            pos : 520,250
            size : 200,100

    FloatLayout:
        Label:
            id: "title_game"
            tpos_hint:{"x": 0.9, "y":0.9}
            size_hint:1, 1.7
            font_size: (root.width + root.height) / 25
            text: "Game"

        Label:
            id: "atout_title"
            tpos_hint:{"x": 0.9, "y":0.9}
            size_hint:1.65, 0.5
            font_size: (root.width + root.height) / 28
            text: "Atout:"

        Label:
            id: atout
            tpos_hint:{"x":0.5, "y":0.5}
            size_hint:1.65,0.2
            font_size: (root.width + root.height) / 30
            text: str(root.atout_kv)

        Label:
            id: vision
            tpos_hint:{"x":0.5, "y":0.5}
            size_hint:1,0.2
            font_size: (root.width + root.height) / 40
            text: str(root.card_vis)

        Label
            id: YourTurn
            pos : -10,-80
            size_hint:1,0.2
            font_size: 50
            text: str(root.yourturn)

        Button:
            background_color: 1,0,0,0.81
            pos_hint:{"x":0.05,"y":0.1}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4
            text: "Return"
            on_release:
                root.manager.transition.direction = "right"
                root.shift_to_waiting()

