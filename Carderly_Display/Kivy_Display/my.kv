<MainWindow>
    name : "main_win"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Display background.png"
    FloatLayout:

        Button:
            background_color: 0,0,1,1
            pos_hint:{"x":0.35,"y":0.15}
            size_hint: 0.3, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4

            text: "Connexion"
            on_release:
                root.manager.transition.direction = "left"
                root.shift_to_insert()

        Button:
            background_color: 1,0,0,1
            pos_hint:{"x":0.05,"y":0.15}
            size_hint: 0.25, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4

            text: "Contacts"
            on_release:
                root.manager.transition.direction = "right"
                root.shift_to_contact()

        Button:
            background_color: 0,1,0,1
            pos_hint:{"x":0.7,"y":0.15}
            size_hint: 0.25, 0.1
            font_size: (root.width**2 + root.height**2) / 12**4

            text: "Settings"
            on_release:
                root.manager.transition.direction = "up"
                root.shift_to_settings()


<WaitingRoom>
